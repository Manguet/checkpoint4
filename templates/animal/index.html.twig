{% extends 'base.html.twig' %}

{% block title %}Nos Animaux{% endblock %}

{% block body %}
    <div class="container-animal">
        <h1 class="text-center">Nos {{ pagination.getTotalItemCount }} Animaux</h1>

        <div class="row justify-content-center">
        {% for animal in pagination %}
            <div class="card m-5 col col-5">
                <div class="row no-gutters">
                    <div class="col-md-4 d-flex justify-content-center align-items-center">
                        <img src="{{ animal.image }}" class="card-img" alt="photo de {{ animal.name }}">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{ animal.name }}</h5>
                            <p class="card-text">NÃ© le {{ animal.birthday|date('d/m/Y') }}</p>
                            <p class="card-text">Localisation : {{ animal.localisation }}</p>
                            <div class="text-right">
                                <a href="#">En savoir plus <i class="far fa-eye icon"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
