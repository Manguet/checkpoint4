{% extends 'base.html.twig' %}

{% block title %}Bonjour {{ user.nickname }}{% endblock %}

{% block body %}
    <div class="admin-container">
        <div class="container">
            <h1 class="text-center">Bienvenu {{ user.nickname }}</h1>
            <p class="text-center">Que souhaitez-vous faire aujourd'hui?</p>
            <div class="row justify-content-around mt-5 mb-5">
                <div class="card m-5">
                    <a href="#">
                    <div class="card-img-top text-center"><i class="fas fa-gamepad"></i></div>
                    <div class="card-body">
                        <h2 class="card-title text-center">Gérer les Jeux</h2>
                    </div>
                    </a>
                </div>

                <div class="card m-5">
                    <a href="{{ path('admin_users') }}">
                        <div class="card-img-top text-center"><i class="fas fa-users-cog"></i></div>
                        <div class="card-body">
                            <h2 class="card-title text-center">Gérer les Utilisateurs</h2>
                        </div>
                    </a>
                </div>

                <div class="card m-5">
                    <a href="{{ path('admin_bookings') }}">
