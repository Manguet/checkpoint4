                            <h2 class="card-title text-center">Gérer les Animaux</h2>
                        </div>
                    </a>
                </div>

                <div class="card m-5">
                    <a href="{{ path('admin_collaborators') }}">
                        <div class="card-img-top text-center"><i class="fas fa-male"></i></div>
                        <div class="card-body">
                            <h2 class="card-title text-center">Gérer les Collaborateurs</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
