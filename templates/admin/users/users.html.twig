{% extends 'base.html.twig' %}

{% block title %}Les Utilisateurs{% endblock %}

{% block body %}
    <div class="admin-container">
        <div class="container text-center">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td></td>
                        <td></td>
                        <td>Nom d'utilisateur</td>
                        <td>Email</td>
                        <td>Role</td>
                        <td>Actions</td>
                    </tr>
                </thead>
                {% for user in users %}
                    <tr>
                        <td>#</td>
                        <td>{{ loop.index }}</td>
                        <td>{{ user.nickname }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ roles[loop.index -1] }}</td>
                        <td>
                            <a href="#" class="blue"><i class="far fa-eye"></i></a>
                            <a href="{{ path('admin_user_edit', { 'id' : user.id }) }}" class="blue"><i class="fas fa-pen"></i></a>
                            <a href="{{ path('admin_user_delete', { 'id' : user.id }) }}" class="red"><i class="fas fa-times"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}