{% extends 'base.html.twig' %}

{% block title %}Les cartes{% endblock %}

{% block body %}
    <div class="admin-container">
        <div class="container text-center">
            <table class="table table-hover">
                <thead>
                <tr>
                    <td></td>
                    <td></td>
                    <td>Nom</td>
                    <td>Valeur</td>
                </tr>
                </thead>
                {% for card in pagination %}
                    <tr>
                        <td>#</td>
                        <td>{{ loop.index }}</td>
                        <td>{{ card.name }}</td>
                        <td>{{ card.value }}</td>
                    </tr>
                {% endfor %}
            </table>
            <div class="text-center m-5">
                <a href="{{ path('admin_card_new') }}">
                    <button class="btn main-btn">Nouvelle Carte</button>
                </a>
            </div>
            <div class="navigation d-flex justify-content-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}