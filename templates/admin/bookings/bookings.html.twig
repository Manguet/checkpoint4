{% extends 'base.html.twig' %}

{% block title %}Les Services d'aide{% endblock %}

{% block body %}
    <div class="admin-container">
        <div class="container text-center">
            <table class="table table-hover">
                <thead>
                <tr>
                    <td></td>
                    <td></td>
                    <td>Animal concerné</td>
                    <td>Personne concernée</td>
                    <td>A quelle date</td>
                    <td>Action</td>
                </tr>
                </thead>
                {% for booking in pagination %}
                    <tr>
                        <td>#</td>
                        <td>{{ loop.index }}</td>
                        <td>{{ booking.animal.name }}</td>
                        <td>{{ booking.user.nickname }}</td>
                        <td>{{ booking.atDate|date('d/m/Y H:i') }}</td>
                        <td>
                            <a href="{{ path('admin_booking_delete', { 'id' : booking.id }) }}" class="red"><i class="fas fa-times"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            <div class="navigation d-flex justify-content-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}