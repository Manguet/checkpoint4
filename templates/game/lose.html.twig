{% extends 'base.html.twig' %}

{% block title %}Place au jeu{% endblock %}

{% block body %}
    <div class="game-container">
        <div class="container">
            {% include 'game/templates/header.html.twig' %}
            <div class="d-flex justify-content-between">
                <p>Votre Score : {{ blackJack.playerScore }}</p>
                <p>Score du Croupier : {{ blackJack.bankScore }}</p>
            </div>
            <div class="boardtable mb-5 d-flex flex-column align-items-center">
                <h1>Vous avez perdu {{ blackJack.toPay | abs }} WildCoins</h1>
                <div>
                    <a href="{{ path('game_new') }}">
                        <button class="btn main-btn">Rejouer</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
