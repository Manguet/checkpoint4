{% extends 'base.html.twig' %}

{% block title %}Place au jeu{% endblock %}

{% block body %}
    <div class="game-container">
        <div class="container">
            {% include 'game/templates/header.html.twig' %}
            {% if blackJack.playerScore > 0 %}
                <div class="d-flex justify-content-between">
                    <p>Votre Score : {{ blackJack.playerScore }}</p>
                    <p>Score du Croupier : {{ blackJack.bankScore }}</p>
                </div>
            {% endif %}
            <div class="boardtable mb-5 d-flex justify-content-around align-items-center">
                <a href="{{ path('game_draw', { 'id' : blackJack.id }) }}">
                    <button type="button" class="btn main-btn">
                        Piocher une carte
                    </button>
                </a>

                <a href="{{ path('game_result', { 'id' : blackJack.id }) }}">
                    <button type="button" class="btn main-btn m-5">
                        Ne plus piocher
                    </button>
                </a>

            </div>
        </div>
    </div>
{% endblock %}
